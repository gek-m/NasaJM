<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/bg_mars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/picture_bottom_margin"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/image_margin"
            android:layout_marginLeft="@dimen/image_margin"
            android:layout_marginEnd="@dimen/image_margin"
            android:layout_marginRight="@dimen/image_margin"
            android:src="@drawable/swipe_indicator_passive" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/image_margin"
            android:layout_marginLeft="@dimen/image_margin"
            android:layout_marginEnd="@dimen/image_margin"
            android:layout_marginRight="@dimen/image_margin"
            android:src="@drawable/swipe_indicator_active" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/image_margin"
            android:layout_marginLeft="@dimen/image_margin"
            android:layout_marginEnd="@dimen/image_margin"
            android:layout_marginRight="@dimen/image_margin"
            android:src="@drawable/swipe_indicator_passive" />
    </LinearLayout>
</FrameLayout>
